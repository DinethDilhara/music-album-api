          "Album-CRUD"
        ],
        "summary": "Add New Album",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "albumName": "Thriller",
                  "artistName": "Michael Jackson",
                  "genre": "Pop, Rock, Funk",
                  "releaseDate": "1982-11-30",
                  "songs": [
                    {
                      "songName": "Thriller",
                      "duration": 358
                    },
                    {
                      "songName": "Billie Jean",
                      "duration": 293
                    },
                    {
                      "songName": "Beat It",
                      "duration": 258
                    }
